{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://coxistai-backend.onrender.com/api/:path*"
    },
    {
      "source": "/chatbot/:path*",
      "destination": "https://coxist-chatbot.onrender.com/:path*"
    },
    {
      "source": "/ppt/:path*",
      "destination": "https://coxistai-ppt-maker.onrender.com/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite"
} 